<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/tv_search_article_item_title"
            android:textSize="16sp"
            android:textColor="@color/color_text_primary"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文章的标题"
            />
        <LinearLayout
            android:id="@+id/groupview_comment_label"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/tv_search_article_item_title"
            android:layout_alignLeft="@+id/tv_search_article_item_title"
            android:layout_alignStart="@+id/tv_search_article_item_title"
            android:background="@drawable/image_number_background"
            >
            <ImageView
                android:id="@+id/iv_home_item_comment"
                android:visibility="visible"
                android:src="@drawable/ic_label_comment"
                android:scaleType="centerCrop"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:layout_gravity="center_vertical"
                android:padding="2dp"

                />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:background="@color/md_white_1000"
                />

            <TextView
                android:id="@+id/tv_search_article_item_answercount"
                android:visibility="visible"
                android:typeface="sans"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"
                android:text="  "
                android:textColor="@android:color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/groupview_view_label"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_below="@+id/tv_search_article_item_title"
            android:layout_toRightOf="@+id/groupview_comment_label"
            android:layout_toEndOf="@+id/groupview_comment_label"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/image_number_background"
            >
            <ImageView
                android:id="@+id/iv_home_item_view"
                android:visibility="visible"
                android:src="@drawable/ic_label_view"
                android:scaleType="centerCrop"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:layout_gravity="center_vertical"
                android:padding="2dp"

                />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:background="@color/md_white_1000"
                />

            <TextView
                android:id="@+id/tv_search_article_item_followcount"
                android:visibility="visible"
                android:typeface="sans"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"
                android:text="  "
                android:textColor="@android:color/white"
                />
        </LinearLayout>
