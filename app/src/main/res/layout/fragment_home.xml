<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_low_gray2"
    tools:context="com.twt.service.wenjin.ui.home.HomeFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/home_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:scrollbars="vertical" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_fastbacktotop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_fast_totop"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_anchor="@id/home_recycler_view"
        app:elevation="@dimen/floating_button_elevation"
        app:layout_anchorGravity="bottom|end"
        app:layout_behavior="com.twt.service.wenjin.behavior.FABScrollBehavior"
        app:fabSize="mini"
        />

</android.support.design.widget.CoordinatorLayout>

